<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/gold"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:padding="3dp"
                    android:id="@+id/txt_view_name_text1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:paddingLeft="3dp"
                    android:id="@+id/name_text2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" "
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_pic1"
                android:layout_width="match_parent"
                android:background="@mipmap/ic_launcher"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gold"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book An Apoinment"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="3dp"
            android:textSize="18dp"
            android:id="@+id/txt_view_name_text4" />
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_pic2"
            android:layout_width="match_parent"
            android:background="@mipmap/ic_launcher"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gold"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="3dp"
                android:textSize="18dp"
                android:id="@+id/txt_view_name_text5" />
        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_pic3"
            android:layout_width="match_parent"
            android:background="@mipmap/ic_launcher"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gold"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Enqiry"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="3dp"
                android:textSize="18dp"
                android:id="@+id/txt_view_name_text6" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>