<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">


    <LinearLayout

        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/rg_member"
            android:visibility="gone"
            android:checkedButton="@+id/rb_user"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/rb_user"
                android:text="User"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:text="salon"
                android:id="@+id/rb_builder"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </RadioGroup>


       <EditText
            android:id="@+id/edt_mobilenumber"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gold"
            android:hint="Mobile Number"
            android:background="@drawable/round_border_btn"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/gold"
            android:textColorHint="@color/gold"
            android:hint="Password"
            android:background="@drawable/round_border_btn"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

               <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="Forgot Password ?"
                android:id="@+id/txt_forgot_password"
                android:layout_height="wrap_content" />
            <CheckBox android:id="@+id/chk_remember"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="  Remember me"
                android:textSize="13dp"
                android:buttonTint="@color/gold"
                android:button="@drawable/checkbox_selector"
                android:textColor="@color/gold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

                <Button
                android:id="@+id/btn_login"
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_corner_bt"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:id="@+id/text"
                android:text="Don't have an Account Yet"
                android:padding="5dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_register"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_corner_bt"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>



        </LinearLayout>

            <Button
            android:id="@+id/login_button"
            android:layout_margin="5dp" android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</LinearLayout>