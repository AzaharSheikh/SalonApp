            android:name=".Activities.Welcome_User"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            >

        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            >

        </activity>
        <activity
            android:name=".Activities.Services"
            android:label="@string/app_name"
